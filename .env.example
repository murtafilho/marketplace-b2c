# ==========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==========================================
APP_NAME="Marketplace B2C"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_WITH_php_artisan_key:generate
APP_DEBUG=false
APP_TIMEZONE="America/Sao_Paulo"
APP_URL=https://yourdomain.com

# LOCALIZATION
APP_LOCALE=pt_BR
APP_FALLBACK_LOCALE=pt_BR
APP_FAKER_LOCALE=pt_BR

# MAINTENANCE
APP_MAINTENANCE_DRIVER=cache
APP_MAINTENANCE_STORE=redis

# PERFORMANCE
PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# LOGGING (PRODUCTION)
LOG_CHANNEL=stack
LOG_STACK=daily,errorlog
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=warning

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=marketplace-b2c
DB_USERNAME=root
DB_PASSWORD=

# DATABASE (PRODUCTION)
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=marketplace_production
DB_USERNAME=marketplace_user
DB_PASSWORD=STRONG_DATABASE_PASSWORD

# SESSION (PRODUCTION)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.yourdomain.com
SESSION_SAME_SITE=lax
SESSION_SECURE=true

# BROADCASTING & CACHE (PRODUCTION)
BROADCAST_CONNECTION=redis
FILESYSTEM_DISK=s3
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX=marketplace_

# REDIS (PRODUCTION)
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=REDIS_STRONG_PASSWORD
REDIS_PORT=6379

# EMAIL (PRODUCTION)
MAIL_MAILER=smtp
MAIL_HOST=smtp.yourdomain.com
MAIL_PORT=587
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=EMAIL_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 (PRODUCTION)
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=marketplace-b2c-production
AWS_USE_PATH_STYLE_ENDPOINT=false

# VITE (PRODUCTION)
VITE_APP_NAME="${APP_NAME}"

# ==========================================
# MERCADO PAGO (PRODUCTION)
# ==========================================
MP_PUBLIC_KEY=APP_USR-xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
MP_ACCESS_TOKEN=APP_USR-xxxxxxxx-xxxxxxxx-xxxxxxxx-xxxxxxxx-xxxxxxxx-xxxxxxxx
MP_APP_ID=1234567890
MP_REDIRECT_URI=${APP_URL}/seller/mercadopago/callback
MP_WEBHOOK_SECRET=STRONG_WEBHOOK_SECRET_FOR_PRODUCTION
MP_APP_FEE=10.0
MP_CLIENT_ID=1234567890
MP_CLIENT_SECRET=CLIENT_SECRET_FROM_MERCADOPAGO

# ==========================================
# MARKETPLACE CONFIGURATION (PRODUCTION)
# ==========================================
MARKETPLACE_COMMISSION=10.0
SELLER_AUTO_APPROVE=false
PRODUCT_AUTO_APPROVE=true
MAX_UPLOAD_SIZE=10240
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,webp
IMAGE_QUALITY=85

# SECURITY
FORCE_HTTPS=true
SECURE_COOKIES=true
CSRF_TOKEN_LIFETIME=7200
